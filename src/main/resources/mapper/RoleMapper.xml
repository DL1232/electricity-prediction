<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.decade.electricityprediction.persistence.mapper.RoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.decade.electricityprediction.persistence.entity.RoleEntity">
        <id column="id" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="role_desc" property="roleDesc"/>
        <result column="is_deleted" property="deleted"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <!--    &lt;!&ndash; 通用查询结果列 &ndash;&gt;-->
    <!--    <sql id="Base_Column_List">-->
    <!--        id, role_name, role_desc, is_deleted, gmt_create, gmt_modified-->
    <!--    </sql>-->

    <select id="findRoleIdByUserId" parameterType="long" resultMap="BaseResultMap">
        SELECT eps_role.id           AS id,
               eps_role.role_name    AS role_name,
               eps_role.role_desc    AS role_desc,
               eps_role.is_deleted   AS is_deleted,
               eps_role.gmt_create   AS gmt_create,
               eps_role.gmt_modified AS gmt_modified
        FROM electricity_prediction.eps_user_role_relation AS eps_user_role_relation
                 LEFT JOIN electricity_prediction.eps_role AS eps_role
                           ON eps_user_role_relation.role_id = eps_role.id
        WHERE user_id = #{userId}
    </select>

</mapper>
